    }

    .container {
      text-align: center;
      position: relative;
      top: 15%;
    }

    h1 {
      font-size: 2.5em;
      color: #fff;
      text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
      margin-bottom: 20px;
    }

    .gif {
      width: 150px;
      height: auto;
      margin-bottom: 20px;
    }

    .buttons {
      position: relative;
      display: inline-block;
    }

    button {
      padding: 15px 30px;
      font-size: 18px;
      margin: 15px;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      transition: 0.3s;
      box-shadow: 2px 2px 10px rgba(0,0,0,0.2);
    }

    #yesBtn {
      background-color: #4CAF50;
      color: white;
    }

    #noBtn {
      background-color: #f44336;
      color: white;
