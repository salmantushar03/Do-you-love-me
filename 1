<body>

  <div class="container">
    <h1>Do you love me, Simla?</h1>
    <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExY2Zsa3ZxZWtqZ2s1eXY4anRpMHBxbndncjN4d3p2c3hqYTRuYzhrbCZlcD12MV9naWZzX3NlYXJjaCZjdD1n/3oz8xKaR836UJOYeOc/giphy.gif" class="gif" alt="Cute Gif">
    <div class="buttons">
      <button id="yesBtn" onclick="alert('I love you too, Simla!')">Yes</button>
      <button id="noBtn">No</button>
    </div>
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const buttonsDiv = document.querySelector(".buttons");

    // Make the 'No' button move within the buttons container
    noBtn.addEventListener("mouseover", () => {
      const containerRect = buttonsDiv.getBoundingClientRect();
      const x = Math.random() * (window.innerWidth - 100);
      const y = Math.random() * (window.innerHeight - 200);
      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
    });

    // Floating hearts animation
    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = (Math.random() * 5 + 5) + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 10000);
    }
    setInterval(createHeart, 500);
  </script>
